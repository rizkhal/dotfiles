# default layout (can be bsp, stack or float)
yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end')

yabai -m config menubar_opacity 0.0
# yabai -m config window_shadow on
# yabai -m config active_window_opacity 0.0
# yabai -m config normal_window_opacity 0.90

# padding and gap between window
yabai -m config top_padding 50
yabai -m config bottom_padding 10
yabai -m config right_padding 10
yabai -m config left_padding 10
yabai -m config window_gap 10

# excluded app
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Discord$" manage=off
yabai -m rule --add app="^DBeaver$" manage=off
yabai -m rule --add app="^emulator-55$" manage=on
yabai -m rule --add app="^FortiClient$" manage=off
